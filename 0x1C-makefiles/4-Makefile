NAME:= school
CC:= gcc
SRC:= main.c school.c
OBJ:= ${SRC:.c=.o}
RM:= rm -f
CFLAGS:= -Wall -Werror -Wextra -pedantic

all: ${NAME} ${OBJ}
	${CC} ${OBJ} -o ${NAME}

${OBJ}: ${SRC}
	${CC} ${CFLAGS} -c -o $@ $?

.PHONY: clean oclean fclean re

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: oclean all



